<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <welcome-file-list>
    <welcome-file>index</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>
  <filter>
    <filter-name>MessageFilter</filter-name>
    <filter-class>hei.devweb.filter.MessageFilter</filter-class>
  </filter>
  <filter>
    <filter-name>AuthentificationFilter</filter-name>
    <filter-class>hei.devweb.filter.AuthentificationFilter</filter-class>
  </filter>
  <filter>
    <filter-name>AdminFilter</filter-name>
    <filter-class>hei.devweb.filter.AdminFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>MessageFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthentificationFilter</filter-name>
    <url-pattern>/user/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping>
  <servlet>
    <description></description>
    <display-name>Index_servlet</display-name>
    <servlet-name>Index_servlet</servlet-name>
    <servlet-class>hei.devweb.servlets.Index_servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Index_servlet</servlet-name>
    <url-pattern>/Index_servlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>DeconnexionServlet</display-name>
    <servlet-name>DeconnexionServlet</servlet-name>
    <servlet-class>hei.devweb.servlets.DeconnexionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeconnexionServlet</servlet-name>
    <url-pattern>/DeconnexionServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Connexion</servlet-name>
    <servlet-class>hei.devweb.servlets.Connexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Connexion</servlet-name>
    <url-pattern>/connexion</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>HomeServlet</display-name>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>hei.devweb.servlets.HomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/HomeServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CreationUtilisateur</servlet-name>
    <servlet-class>hei.devweb.servlets.CreationUtilisateurs</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListeUtilisateurs</servlet-name>
    <servlet-class>hei.devweb.servlets.ListeUtilisateurs</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SuppressionUtilisateur</servlet-name>
    <servlet-class>hei.devweb.servlets.SuppressionUtilisateur</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreationUtilisateur</servlet-name>
    <url-pattern>/creationUtilisateur</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListeUtilisateurs</servlet-name>
    <url-pattern>/listeUtilisateurs</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SuppressionUtilisateur</servlet-name>
    <url-pattern>/suppressionUtilisateur</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MessageSenderServlet</servlet-name>
    <servlet-class>hei.devweb.servlets.MessageSenderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MessageSenderServlet</servlet-name>
    <url-pattern>/messageSenderServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PictureAddServlet</servlet-name>
    <servlet-class>hei.devweb.servlets.PictureAddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PictureAddServlet</servlet-name>
    <url-pattern>/pictureAddServlet</url-pattern>
  </servlet-mapping> 
  <servlet>
    <servlet-name>PictureDeleteServlet</servlet-name>
    <servlet-class>hei.devweb.servlets.PictureDeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PictureDeleteServlet</servlet-name>
    <url-pattern>/pictureDeleteServlet</url-pattern>
  </servlet-mapping>
</web-app>